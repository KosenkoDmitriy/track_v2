<%= element_editor_for(element) do |el| -%>
  <%= el.edit :background_image %>
  <%= el.edit :mobile_image %>
  <%= el.edit :overlay? %>
  <%= el.edit :superheader %>
  <%= el.edit :headline %>
  <%= el.edit :text %>
  <%= el.edit :text_alignment %>
  <%= el.edit :text_color %>
  <%= el.edit :module_height %>
  <%= el.edit :page_link %>
  <% element.contents.where(name: ['bullet', 'stamp_image', 'image_title']).each do |content| %>
    <%= render_essence_editor content %>
  <% end %>
  <p><%= render_new_content_link(element) %></p>
<%- end -%>
